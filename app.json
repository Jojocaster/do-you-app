{
  "expo": {
    "name": "Do!! You!!! World",
    "slug": "DoYouWorld",
    "version": "0.5.1",
    "backgroundColor": "#1c1c1c",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "plugins": [
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/SpaceMono-Regular.ttf"]
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "disableAutomaticComponentCreation": false
          }
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "doyouapp",
          "organization": "wonky-lines-ltd"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "1e79607b-3c62-48e4-a448-4399ff4c9879"
      }
    },
    "splash": {
      "image": "./assets/images/splash-icon-light.png",
      "imageWidth": 200,
      "backgroundColor": "#4747DF"
    },
    "notification": {
      "icon": "./assets/images/notifs.png",
      "color": "#FFDC3B"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://exp.host/@joelbeaudon/DoYouWorld"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.wonkylines.doyouworld",
      "buildNumber": "0.5.1",
      "supportsTablet": false,
      "infoPlist": {
        "UIBackgroundModes": ["fetch", "audio", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"],
      "package": "com.wonkylines.doyouworld",
      "versionCode": 32
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    }
  }
}
